{
  "name": "book-haven-site",
  "version": "1.0.0",
  "description": "Book Haven Bookstore Website",
  "main": "index.js",
  "scripts": {
    "start": "npx http-server . -c-1 -p 8080",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "devDependencies": {},
  "author": "",
  "license": "ISC"},
  "header": {
    "display": "flex",
    "align-items": "center",
    "justify-content": "space-between",
    "padding": "24px 48px",
    "background": "#22344a",
    "box-shadow": "0 2px 8px rgba(0,0,0,0.04)"
  },
  "nav": {
    "a": {
      "color": "#fff",
      "text-decoration": "none",
      "margin-left": "32px",
      "font-weight": "600",
      "padding": "8px 20px",
      "border-radius": "8px",
      "transition": "background 0.2s, color 0.2s"
    }
  },
  "hero": {
    "display": "flex",
    "justify-content": "space-between",
    "align-items": "center",
    "padding": "80px 48px",
    "background": "linear-gradient(135deg, #22344a 0%, #1a2737 100%)",
    "color": "#fff"
  },
  "hero-content": {
    "h1": {
      "font-size": "3rem",
      "font-weight": "700",
      "margin-bottom": "24px"
    },
    "highlight": {
      "color": "#e6c15b"
    },
    "p": {
      "font-size": "1.25rem",
      "margin-bottom": "32px"
    }
  },
  "hero-buttons": {
    "button": {
      "font-size": "1rem",
      "padding": "16px 32px",
      "border-radius": "8px",
      "border": "none",
      "margin-right": "16px",
      "font-weight": "600",
      "cursor": "pointer"
    },
    "primary": {
      "background": "#e6c15b",
      "color": "#22344a"
    },
    "secondary": {
      "background": "transparent",
      "color": "#e6c15b",
      "border": "2px solid #e6c15b"
    }
  },
  "main": {
    "section": {
      "hero": {
        "content": {
          "h1": {
            "text": "Welcome to Book Haven",
            "highlight": true
          },
          "p": "Your neighborhood bookstore where stories come alive and literary dreams take flight",
          "buttons": {
            "primary": {
              "text": "Explore Books â†’",
              "action": "exploreBooks"
            },
            "secondary": {
              "text": "Join Community",
              "action": "joinCommunity"
            }
          }
        },
        "card": {
          "icon": "ðŸ“–",
          "text": "Discover Your Next Great Read"
        },
        "photos": [
          {
            "src": "images/hero-bookshelf.jpg",
            "alt": "Bookshelf full of books",
            "style": {
              "width": "320px",
              "border-radius": "18px",
              "box-shadow": "0 4px 16px rgba(34,52,74,0.15)",
              "margin-bottom": "24px"
            }
          },
          {
            "src": "images/hero-reading.jpg",
            "alt": "Person reading in cozy bookstore",
            "style": {
              "width": "320px",
              "border-radius": "18px",
              "box-shadow": "0 4px 16px rgba(34,52,74,0.15)"
            }
          }
        ]
      }
    }
  },
  "devDependencies": {
    "http-server": "^14.1.1"
  }
}
